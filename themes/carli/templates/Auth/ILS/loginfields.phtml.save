  <script type="text/javascript">
  function loginCatalog(choiceObj) {
      var theaction = choiceObj.form.action;
      var thiscatalog = choiceObj[choiceObj.selectedIndex].value;

      if (theaction.search(/\/all\/vf\//) < 0) {
         choiceObj.form.action = theaction.replace(/\/all\/vf\-...\//, "/all/vf-" + thiscatalog + "/");
      } else {
         choiceObj.form.action = theaction.replace(/\/all\/vf\//, "/all/vf-" + thiscatalog + "/");
      }
      choiceObj.form.submit();
  }
  </script>
